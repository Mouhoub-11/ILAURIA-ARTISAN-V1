<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFF"
    android:padding="20dp"

>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:id="@+id/logo"
        android:src="@drawable/logo">

    </ImageView>

    <TextView
        android:id="@+id/txtVerifCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Verification code"
        android:textColor="@color/black"
        android:textSize="20sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/INFOTEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Veuillez saisir le code de confirmation envoyé sur votre email"
        android:textColor="@color/black"
        android:textSize="18dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="56dp"

        >

        <EditText
            android:id="@+id/champs1"
            style="@style/CenteredHintEditText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:hint="*"
            android:inputType="number">

        </EditText>

        <EditText
            android:id="@+id/champs2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:hint="*"
            style="@style/CenteredHintEditText"
            >

        </EditText>

        <EditText
            android:id="@+id/champs3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:hint="*"
            style="@style/CenteredHintEditText"
            >

        </EditText>

        <EditText
            android:id="@+id/champs4"
            style="@style/CenteredHintEditText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:hint="*"
            android:inputType="number">


        </EditText>




</LinearLayout>


    <Button
        android:id="@+id/btnReessayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FFF"
        android:onClick="ressaiClicked"
        android:text="Code incorrecte,réessayer "
        android:textColor="#FF0000"
        >

</Button>


<Button
android:id="@+id/btne"
android:layout_width="343dp"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:layout_marginTop="48dp"
android:backgroundTint="#FFF"
android:onClick="recup"
android:text="Je n'ai pas recu, renvoyez"
android:textColor="#FF0000"

    >

</Button>

<Button
android:id="@+id/btnr"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="right"
android:backgroundTint="#1976D2"
android:onClick="recup"
android:text="Envoyer "
android:layout_marginTop="48dp"
    >

</Button>

    </LinearLayout>
