<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreationCompte1"
    android:orientation="vertical"
    android:background="#FFF"
    android:padding="10dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:id="@+id/logo"
        android:src="@drawable/logo">

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">


        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Accéder à votre compte Ilauria ?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/em"

            app:hintEnabled="false"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/email"

                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"



                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Champ obligatoire*"
            android:textColor="#ff0000"
            android:id="@+id/champemail"
            android:layout_marginBottom="8dp"

            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pass"
            android:hint="Mot de passe"
            app:passwordToggleEnabled="true"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:inputType="textPassword"



                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/champmdp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Champ obligatoire*"
            android:textColor="#ff0000" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:elevation="0dp"
            android:text="Mot de passe oublié?"
            android:textColor="#1976D2"
            android:textSize="14sp">

        </Button>
        <Button
            android:id="@+id/btnsidentifier"
            style="@style/Widget.Material3.Button"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S'identifier"
            android:backgroundTint="#1976D2"
            android:onClick="Verfier"
            android:layout_marginBottom="23dp"
            />
        <Button
            android:id="@+id/btnsincrire"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vous n'avez pas de un compte ? S'inscrire"

            app:strokeColor="@color/bluePrincipal"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            />
        <ImageView

            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/group_2"
            android:layout_marginBottom="15dp"


            >


        </ImageView>

        <Button
            android:id="@+id/button6"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"

            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuer avec Google"
            android:textColor="@color/black"

            app:icon="@drawable/gmail"
            app:iconGravity="textStart"

            app:strokeColor="@color/bluePrincipal"
            />

    </LinearLayout>

</LinearLayout>



