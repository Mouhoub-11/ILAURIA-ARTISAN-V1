<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreationCompte1"
    android:orientation="vertical"
    android:background="#FFF"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:id="@+id/logo"
        android:src="@drawable/logo">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:gravity="center"
            android:text="CrÃ©er votre compte ilauria"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/em1"

            app:hintEnabled="false"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/email1"

                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"



                />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Champ obligatoire*"
            android:textColor="#ff0000"
            android:id="@+id/champemail1"
            android:layout_marginBottom="8dp"

            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pass1"
            android:hint="Mot de passe"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password1"



                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView

        android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Champ obligatoire*"
            android:textColor="#ff0000"
            android:id="@+id/champmdp1"
            android:layout_marginBottom="8dp"

            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pass2"
            android:hint="Confirmer le mot de passe"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Confirmpassword1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/champconfirmmdp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:text="Champ obligatoire*"
            android:textColor="#ff0000"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Page 1/3"
                android:textColor="@color/outline_variant"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Suivant"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:strokeColor="#1976D2"
                android:onClick="suivant1"

                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>


